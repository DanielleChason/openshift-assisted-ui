{
  "root": "packages/types",
  "sourceRoot": "packages/types/src",
  "projectType": "library",
  "targets": {
    "codegen": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": ["${NX_ASSISTED_SERVICE_OUT}"],
        "commands": [
          "wget -t=3 -nv -O ${NX_ASSISTED_SERVICE_OUT}/swagger.yaml ${NX_ASSISTED_SERVICE_SWAGGER_URL}",
          "sw2dts -w -so ${NX_ASSISTED_SERVICE_OUT}/types.ts ${NX_ASSISTED_SERVICE_OUT}/swagger.yaml"
        ],
        "cwd": "packages/types",
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["${NX_ASSISTED_SERVICE_OUT}"],
      "options": {
        "fix": true,
        "maxWarnings": 0,
        "hasTypeAwareRules": true,
        "lintFilePatterns": ["packages/types/**/*.ts"]
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [
        {
          "target": "codegen",
          "projects": "self"
        },
        {
          "target": "lint",
          "projects": "self"
        }
      ],
      "options": {
        "outputPath": ["${NX_ASSISTED_SERVICE_OUT}"],
        "command": "echo Building...",
        "cwd": "packages/types",
        "parallel": false
      }
    }
  }
}
